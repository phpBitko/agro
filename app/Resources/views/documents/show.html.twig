{% extends 'base.html.twig' %}

{% block body %}
    <h1>Documents</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>Agreementnumber</th>
                <td>{{ document.agreementNumber }}</td>
            </tr>
            <tr>
                <th>Agreementdate</th>
                <td>{% if document.agreementDate %}{{ document.agreementDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('documents_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('documents_edit', { 'id': document.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
