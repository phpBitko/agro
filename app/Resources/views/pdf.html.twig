                <td>{{ oc.houseKind }}</td>
                <td>{{ oc.propertyRentObject }}</td>
                <td>{{ oc.category }}</td>
                <td>{{ oc.purpose }}</td>
                <td>{{ oc.sqrrent }}</td>
                <td>{{ oc.rentRatePercent }}</td>
                <td>{{ oc.cost1month }}</td>
                <td>{{ oc.rentType }}</td>
                <td>{{ oc.kmdaobject.costbalans }}</td>
