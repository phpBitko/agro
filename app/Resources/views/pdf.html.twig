                <td>{{ oc.agreementNumber }}</td>
                <td>{{ oc.outgoingNumber }}</td>
                <td>{{ oc.incomeNumber }}</td>
                <td>{{ oc.entryToCommisDate|date('d/m/y') }}</td>
                <td>{{ oc.reviewDate|date('d/m/y') }}</td>
