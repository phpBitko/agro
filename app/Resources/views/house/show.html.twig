{% extends 'base.html.twig' %}

{% block body %}
    <h1>House</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ house.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ house.name }}</td>
            </tr>
            <tr>
                <th>Vacant</th>
                <td>{% if house.vacant %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('house_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('house_edit', { 'id': house.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
