<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</h1>
            <div class="account-wall">
<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-signin">
    {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder':  'security.login.username'|trans({}, 'FOSUserBundle') } })}}
    {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder':  'form.email'|trans({}, 'FOSUserBundle') } })}}
    {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder':  'form.password'|trans({}, 'FOSUserBundle') } })}}
    {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder':  'form.password_confirmation'|trans({}, 'FOSUserBundle') } })}}
    
    
        <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-lg btn-primary btn-block" />
    
{{ form_end(form) }}
    </div>
        </div>
    </div>
</div>